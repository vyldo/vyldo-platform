# Server Configuration
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/vyldo-platform

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=7d
SESSION_SECRET=your-super-secret-session-key-change-this-min-32-chars

# Hive Blockchain (Optional)
HIVE_ESCROW_ACCOUNT=vyldo-escrow
HIVE_API_URL=https://api.hive.blog

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# URLs - Update with your EC2 IP or domain
CLIENT_URL=https://your-ec2-ip-or-domain
SERVER_URL=https://your-ec2-ip-or-domain

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
